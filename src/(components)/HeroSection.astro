---
import { Picture } from "astro:assets";
import heroImage from "../images/photos/hero_image.jpg";
import Highlight1 from "../images/drawings/Highlight1.svg";
import Highlight2 from "../images/drawings/Highlight2.svg";

import { renderRichText, renderButtons } from "../utils";

const { h1, h2, buttons } = Astro.props;
---

<section
	class="container flex flex-col justify-center bg-secondary md:mx-auto px-6 md:px-0 md:mt-0 md:h-screen md:flex-row md:items-center md:justify-between md:gap-4 lg:px-48"
>
	<div class="md:flex-1 w-3/4">
		<h1
			class="font-pt-serif text-2xl font-bold text-center pt-12 mx-auto w-72 leading-9 md:w-full md:ml-0 md:text-4xl md:text-left"
			set:html={renderRichText(h1)}
		/>
		<div
			class="text-sm mt-8 leading-5 md:text-lg md:text-left"
			set:html={renderRichText(h2)}
		/>
		<div class="mt-7 flex flex-col lg:flex-row justify-stretch gap-3 md:font-medium md:text-lg" set:html={renderButtons(buttons)} />
	</div>
	<div class="mt-28 flex justify-around h-44 md:block md:flex-0 md:self-baseline md:mt-32">
		<div class="relative">
			<Highlight1
				width={52}
				height={65}
				class="absolute -top-16 left-2"
			/>
		</div>
		<Picture
			formats={["webp", "jpg"]}
			src={heroImage}
			alt="Artem Palevich works at computer"
			class="mx-auto -mb-16 rotate-12 shadow-xl"
			height="300"
			loading="eager"
		/>
		<div class="relative">
			<Highlight2
				width={38}
				height={40}
				class="absolute -bottom-32 right-8"
			/>
		</div>
	</div>
</section>
