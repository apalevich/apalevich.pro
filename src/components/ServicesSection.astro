const { content = common } = Astro.props;
---

<section class="sectionSize bg-black text-white">
	<div>
		<h2
			class="secondaryTitle bg-underline9 bg-100% bg-left-bottom bg-no-repeat pb-4"
		>
			What we do
		</h2>
	</div>
	<div class="flex flex-col md:flex-row">
		{
			content.map((item, i) => (
				<div class="mx-8 my-4 flex flex-1 flex-col items-center">
					<div
						class="mb-3 flex h-12 w-12 items-center justify-center rounded-full border-2 bg-white text-xl text-black"
						set:html={item.icon || i + 1}
					/>
					<h3
						class="mb-2 min-h-14 text-center font-montserrat text-xl font-medium"
						set:html={item.title}
					/>
					<p class="text-center font-montserrat" set:html={item.description} />
				</div>
			))
		}
	</div>
</section>
