<pre id="message">Loading...</pre>

<script>
fetch('https://api.github.com/repos/apalevich/apalevich%2Epro/commits?per_page=3')
  .then(res => res.json())
  .then(res => {
    console.log(res);
    let markup = '';
    res.forEach(el => {
        const d = new Date(el.commit.author.date);

        markup += `${d.getUTCHours()}:${d.getUTCMinutes()} | ${el.commit.message}\n`
    });
    document.getElementById('message').innerHTML = markup
  })
  .catch(() => {document.getElementById('message').classList.add('hidden')})
</script>