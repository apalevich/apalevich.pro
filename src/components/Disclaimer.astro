<pre id="message">Loading...</pre>

<script>
fetch('https://api.github.com/repos/apalevich/apalevich%2Epro/commits?per_page=3')
    .then(res => res.json())
    .then(res => {
        let markup = res.reduce((acc, el) => {
            const t1 = new Date(el.commit.author.date);
            const t2 = new Date();
            const d = [
                Math.floor((t2.getTime() - t1.getTime()) / 1000 / 60 / 60),
                Math.floor((t2.getTime() - t1.getTime()) / 1000 / 60 % 60)
            ];
            return acc + `${d[0]}h ${d[1]}m ago | ${el.commit.message}\n`;
        }, '');
        document.getElementById('message').innerHTML = markup;
    })
    .catch(() => {document.getElementById('message').classList.add('hidden')})
</script>