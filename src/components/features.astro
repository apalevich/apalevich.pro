---
// @ts-ignore
import { Icon } from "astro-icon/components";
import Card from "./card.astro";

const features = [
  {
    title: "Marketing Web Development",
    description: "Rapid development of high-converting websites and newsletters with seamless marketing tool integration. Get your marketing assets launched in days, not weeks, with guaranteed performance and mobile responsiveness.",
    icon: "bx:bxs-window-alt",
  },
  {
    title: "AI Agent & Automatization",
    description: "Optimize your business processes with AI automation for improved performance and reduced operational costs. Our AI agents handle internal communication, task management, and maintenance while your team focuses on growth.",
    icon: "bx:bxs-bot",
  },
  {
    title: "Technical Talent Acquisition",
    description: "Access pre-vetted senior developers and technical experts within 2 weeks. Each candidate goes through rigorous technical assessment and comes with a 30-day satisfaction guarantee.",
    icon: "bx:bxs-user",
  },
];
---

<div class="mt-16 md:mt-0">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
    Web development with results at the forefront
  </h2>
  <!-- <p class="text-lg mt-4 text-slate-600">
    We provide custom web development that turns your vision into high-converting digital experiences
  </p> -->
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 mt-16 gap-16">
  {
    features.map(({title, description, icon}) => (
      <Card text={description}>
        <div class="flex-1" slot="heading">
          <h2 class="text-4xl font-semibold" set:text={title} />
          {/* <p
              class="mt-1 text-base lg:text-lg font-normal text-gray-500 opacity-50"
          >
              React.js, Vue.js, Nuxt
          </p> */}
        </div>

        <Fragment slot="links">
            <a
                class="text-link  lg:text-lg"
                href="https://github.com/apalevich"
                target="_blank"
                aria-label="Open in new tab">GitHub</a
            > /
            <a
                class="text-link  lg:text-lg"
                href="https://linkedin.com/in/apalevich/"
                target="_blank"
                aria-label="Open in new tab">LinkedIn</a
            >
        </Fragment>
        <Icon size={145} class="text-white" name={icon} slot="icon" />
      </Card>
    ))
  }
</div>
